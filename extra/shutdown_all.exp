#!/usr/bin/expect -f


for {set i 0} {$i < 5} {incr i 1} {
  spawn ssh socialsoul@socialsoul${i}.local
  expect "assword:"
  send "soulmate\r"
  expect "$ " 
  send "defaults write -g ApplePersistence -bool no\r"
  expect "$ "
  send "sudo shutdown -h now\r" 
  expect "assword:"
  send "soulmate\r"
  expect "$ "
  send "exit\r"
}


